<script type="text/javascript">
      $(document).ready(function(){
          $("#addtosite").click(function(){
              $("#assetModal").modal();
          });
          $("#AssetCancelId").click(function () {
              $("#assetModal").modal('toggle');
          });
          $("#AssetAddId").click(function () {
              $("#assetModal").modal('toggle');
          });
      });

      $(document).ready(function () {
          $("#transferperson").click(function () {
              $("#persons_check:hidden").show('slow');
              $("#sites_check").hide();
          });
          $("#transferperson").click(function () {
              if ($('transferperson').prop('checked') === false) {
                  $('#persons_check').hide();
              }
          });

          $("#transfersite").click(function () {
              $("#sites_check:hidden").show('slow');
              $("#persons_check").hide();
          });
          $("#transfersite").click(function () {
              if ($('transfersite').prop('checked') === false) {
                  $('#sites_check').hide();
              }
          });
      });

      $(document).ready(function () {
          var checkbox = document.getElementById("checkbox1");

          $("#checkbox1").click(function () {
              if (checkbox.checked == true) {
                  document.getElementById("leaseemail").disabled = false;
              } else {
                  document.getElementById("leaseemail").disabled = true;
              }
          });
      });

      $("#check-all").click(function () {
          $(".checks").prop('checked', $(this).prop('checked'));
      });

      $("#check-all2").click(function () {
          $(".checksmodal").prop('checked', $(this).prop('checked'));
      });
</script>
